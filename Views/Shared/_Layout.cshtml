<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clean IT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"></head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<body>
    <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href='@Url.Action("Index", "Home")'><img src="..\img\Logo_Header.png" class="logo-header"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cleaner</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Servicios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='@Url.Action("Contacto", "Home")'>Contacto</a>
                    </li>
                </ul>
                <div class="d-flex ms-auto align-items-center">
                    <form class="d-flex me-3" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><img src="..\img\Logo_Usuario.png" class="logo-user-header"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><img src="..\img\Logo_Notificaciones.png" class="logo-notis-header"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>

    <main role="main">
        @RenderBody()
    </main>

<footer class="footer">
    <div class="container d-flex justify-content-between align-items-center py-3">
        <div class="footer-logo d-flex align-items-center">
            <img src="../img/Logo_Escoba.png" alt="Logo Clean IT" class="logo-footer">
            <span class="footer-rights">© 2024 - CleanIT. Todos los derechos reservados.</span>
        </div>
        <div class="footer-social d-flex align-items-center">
            <a href="#" class="footer-item d-flex align-items-center mx-3">
                <img src="../img/Logo_Instagram.png" alt="Instagram" class="icon">
                <span>@@CleanIT</span>
            </a>
            <a href="#" class="footer-item d-flex align-items-center mx-3">
                <img src="../img/Logo_Twitter.png" alt="Twitter" class="icon">
                <span>@@CleanIT</span>
            </a>
            <a href="mailto:CleanIT@gmail.com" class="footer-item d-flex align-items-center mx-3">
                <img src="../img/Logo_Gmail.png" alt="Gmail" class="icon">
                <span>CleanIT@gmail.com</span>
            </a>
            <a href="tel:+5491112345678" class="footer-item d-flex align-items-center mx-3">
                <img src="../img/Logo_Telefono.png" alt="Telefono" class="icon">
                <span>+54 9 11 1234-5678</span>
            </a>
        </div>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
