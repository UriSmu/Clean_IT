@{
    ViewData["Title"] = "Contacto";
}

<div class="contacto-header">
    <img src="..\img\Imagen_Contacto.jpg" alt="Imagen de Contacto" class="contacto-header-img">
    <h1 class="contacto-titulo">CONTACTO</h1>
</div>

<div class="contacto-formulario">
    <h2>Contactános</h2>
    
    <form>
        <label for="nombre">Nombre</label>
        <input type="text" id="nombre" name="nombre" placeholder="Ingresa tu nombre">

        <label for="apellido">Apellido</label>
        <input type="text" id="apellido" name="apellido" placeholder="Ingresa tu apellido">

        <label for="servicio">Servicio a consultar</label>
        <select id="servicio" name="servicio">
            <option value="" disabled selected>Seleccione el servicio</option>
            <option value="limpieza">Limpieza</option>
            <option value="mantenimiento">Mantenimiento</option>
            <option value="consultoria">Consultoría</option>
        </select>

        <label for="mensaje">Mensaje</label>
        <textarea id="mensaje" name="mensaje" placeholder="Ingrese su mensaje (opcional)"></textarea>

        <button type="submit" class="contacto-boton">ENVIAR CONSULTA</button>
    </form>
</div>

